{
  "name": "bornomala-script-pack",
  "displayName": "Bornomala Script Pack",
  "description": "Syntax highlighting and support for Bornomala Script (.bs files)",
  "version": "1.0.2",
  "publisher": "mahfuz0712",
  "icon": "icons/icon.png",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./extension.js",
  "contributes": {
    "semanticTokenColors": {
      "keyword.other.special.bornomalascript": "#569CD6",
      "variable.interpolation.bornomalaScript": "#569CD6"
    },
    "configurationDefaults": {
      "[*]": {
        "editor.tokenColorCustomizations": {
          "textMateRules": [
            {
              "scope": "keyword.control.bornomalascript",
              "settings": {
                "foreground": "#ff79c6"
              } 
            },
            {
              "scope": "keyword.other.bornomalascript",
              "settings": {
                "foreground": "#61afef"
              }  
            },
            {
              "scope": "variable.interpolation.bornomalaScript",
              "settings": {
                "foreground": "#61afef"
              } 
            }
          ]
        }
      }
    },
    "languages": [
      {
        "id": "bornomalascript",
        "aliases": [
          "Bornomala Script",
          "bornomalascript"
        ],
        "extensions": [
          ".bs"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/BS.svg",
          "dark": "./icons/BS.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "bornomalascript",
        "scopeName": "source.bornomalascript",
        "path": "./syntaxes/bornomalascript.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "bornomalascript",
        "path": "./snippets/bornomalascript.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "echo Skipping compile step (no TypeScript)",
    "compile": "npx vsce package"
  },
  "devDependencies": {
    "@vscode/vsce": "^3.6.0",
    "vscode": "^1.1.34"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mahfuz0712/bornomala-script-pack-vscode-extension.git"
  }
}