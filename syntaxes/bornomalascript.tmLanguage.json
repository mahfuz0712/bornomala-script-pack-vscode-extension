{
  "scopeName": "source.bornomalascript",
  "name": "BornomalaScript",
  "fileTypes": ["bs"],
  "patterns": [
    {
      "name": "keyword.control.bornomalascript",
      "match": "\\b(dhoro|jodi|othoba|tahole|nahole|jokhon|tokhon|arNahole|jotokkhon|totokkhon|thamo|choluk|erModdhe|dekho|notun)\\b"
    },
    {
      "name": "keyword.other.bornomalascript",
      "match": "\\b(ferotDao|object)\\b"
    },
    {
      "name": "keyword.declaration.bornomalascript",
      "match": "\\b(kaj|lekho|inputNao)\\b"
    },
    {
      "name": "variable.interpolation.bornomalaScript",
      "match": "\\$\\{[^}]+\\}"
    },
    {
      "name": "constant.numeric.bornomalaScript",
      "match": "\\b\\d+(\\.\\d+)?\\b"
    },
    {
      "name": "string.quoted.double.bornomalaScript",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.bornomalaScript",
          "match": "\\\\."
        }
      ]
    },
    {
      "name": "comment.line.double-slash.bornomalaScript",
      "match": "//.*$"
    },
    {
      "name": "comment.block.bornomalaScript",
      "begin": "/\\*",
      "end": "\\*/"
    },
    {
      "name": "variable.bornomalaScript",
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
    },
    {
      "name": "punctuation.brackets.bornomalaScript",
      "match": "[{}\\[\\]()]"
    },
    {
      "name": "operator.bornomalaScript",
      "match": "[=+\\-*/%<>!&|]+"
    }
  ],
  "repository": {}
}
