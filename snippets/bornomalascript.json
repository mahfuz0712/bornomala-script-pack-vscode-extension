    "nahole else": {
      "prefix": "nahole",
      "body": [
        "nahole {",
        "    ${0:// ekhane code likhun}",
        "}"
      ],
      "description": "Create an 'else' statement using 'nahole'"
    },
    "jokhon while": {
      "prefix": "jokhon",
      "body": [
        "jokhon (${1:condition}) {",
        "    ${0:// code here}",
        "}"
      ],
      "description": "Create a 'while' loop using 'jokhon'"
    },
    "inputNao input": {
      "prefix": "inputNao",
      "body": [
        "${1:variableName} = inputNao(${2:prompt});"
      ],
      "description": "Take input using 'inputNao'"
    }
  }
