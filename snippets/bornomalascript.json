      "description": "Create an 'if' statement using 'jodi'"
    },
    "othoba else if": {
      "prefix": "othoba",
      "body": [
        "othoba (${1:condition}) {",
        "    ${0:// ekhane code likhun}",
        "}"
      ],
      "description": "Create an 'else if' statement using 'othoba'"
