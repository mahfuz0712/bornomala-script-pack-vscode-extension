{
  "BornomalaScript Snippets": {
    "kaj function": {
      "prefix": "kaj",
      "body": [
        "kaj ${1:KajName}(${2:params}) {",
        "    ${0:// ekhane code likhun}",
        "}"
      ],
      "description": "Create a BornomalaScript function using 'kaj'"
    },
    "dhoro variable": {
      "prefix": "dhoro",
      "body": [
        "dhoro ${1:variableName} = ${2:value};"
      ],
      "description": "variable banate 'dhoro' word ti bebohar korun"
    },
    "lekho print": {
      "prefix": "lekho",
      "body": [
        "lekho(${1:expression});"
      ],
      "description": "Print output using 'lekho'"
    },
    "ferotDao return": {
      "prefix": "ferotDao",
      "body": [
        "ferotDao ${1:value};"
      ],
      "description": "Return a value using 'ferotDao'"
    },
    "jodi if": {
      "prefix": "jodi",
      "body": [
        "jodi (${1:condition}) tahole {",
        "    ${0:// ekhane code likhun}",
        "}"
      ],
      "description": "Create an 'if' statement using 'jodi'"
    },
    "othoba else if": {
      "prefix": "othoba",
      "body": [
        "othoba (${1:condition}) tahole {",
        "    ${0:// ekhane code likhun}",
        "}"
      ],
      "description": "Create an 'else if' statement using 'othoba'"
    },
    "nahole else": {
      "prefix": "nahole",
      "body": [
        "nahole {",
        "    ${0:// ekhane code likhun}",
        "}"
      ],
      "description": "Create an 'else' statement using 'nahole'"
    },
    "dekho switch": {
      "prefix": "dekho",
      "body": [
        "dekho (${1:variable}) erModdhe {",
        "    ${0:// ekhane code likhun}",
        "}"
      ]
    },
    "jokhon case": {
      "prefix": "jokhon",
      "body": [
        "jokhon ${1:value} tokhon {",
        "    ${0:// ekhane code likhun}",
        "}"
      ],
      "description": "Create a 'case'  using 'jokhon'"
    },
    "inputNao input": {
      "prefix": "inputNao",
      "body": [
        "inputNao(${2:prompt});"
      ],
      "description": "Take input using 'inputNao'"
    },
    "jotokkhon condition": {
      "prefix": "jotokkhon",
      "body": [
        "jotokkhon (${1:condition}) totokkhon {",
        "    ${0: // ekhane code likhun}",
        "}"
      ]
    },
    "object class based": {
      "prefix": "object",
      "body": [
        "object (${1:ObjectName}) {",
        "    ${1:ObjectName}(params...) {",
        "    }",
        "}"
      ]
    }

  }
}
