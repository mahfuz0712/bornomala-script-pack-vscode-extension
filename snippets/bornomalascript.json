{
  "BornomalaScript Snippets": {
    "kaj function": {
      "prefix": "kaj",
      "body": [
        "kaj ${1:KajName}(${2:params}) {",
        "    ${0:// ekhane code likhun}",
        "}"
      ],
      "description": "Create a BornomalaScript function using 'kaj'"
    },
    "dhoro variable": {
      "prefix": "dhoro",
      "body": [
        "dhoro ${1:variableName} = ${2:value};"
      ],
      "description": "variable banate 'dhoro' word ti bebohar korun"
    },
    "lekho print": {
      "prefix": "lekho",
      "body": [
